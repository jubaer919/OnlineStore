<section class="section-product-details">
  <div class="product-details-container py-12 max-w-7xl mx-auto px-4">
    <div class="product-details flex flex-col md:flex-row gap-10">

      <!-- LEFT SIDE -->
      <div class="left-side flex gap-4">

        <!-- Thumbnail Mini Images -->
        <div class="img-cta-container flex md:flex-col gap-2 transition-opacity duration-300 ease-in-out" id="left-thumbnails"></div>

        <!-- Main Image Carousel with Buttons -->
        <div>
          <div class="main-image-container relative w-full max-w-lg h-[500px] border border-gray-500">
            <!-- Empty Swiper container -->
            <div class="main-carousel swiper h-full w-full">
              <div class="swiper-wrapper h-full transition-opacity duration-300 ease-in-out">
                <!-- Slides will be added dynamically via JS -->
              </div>
              <!-- Navigation arrows -->
              <div class="absolute right-8 bottom-8 w-28 h-4 z-10">
                <div class="relative flex gap-4">
                  <!-- Previous button -->
                  <div class="swiper-button-prev relative left-0 !h-10 !w-10 rounded-full bg-white/80 shadow-md hover:bg-white transition-all duration-200 after:!text-xs after:!content-['prev'] after:!text-gray-700"></div>
          
                  <!-- Next button -->
                  <div class="swiper-button-next relative right-0 !h-10 !w-10 rounded-full bg-white/80 shadow-md hover:bg-white transition-all duration-200 after:!text-xs after:!content-['next'] after:!text-gray-700"></div>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>

      <!-- RIGHT SIDE (Product Info) -->
      <div class="right-side w-full md:w-1/2 space-y-6">
        <h1 class="text-2xl font-bold mb-2">{{ product.title }}</h1>
        <p class="text-sm text-gray-500 mt-1">{{ product.collections.first.title }}</p>
        <p class="text-lg text-blue-950 font-bold mb-4">{{ product.price | money }}</p>

        <!-- Thumbnail Mini Images -->
        <label class="block mb-1 font-semibold text-sm">Select Color</label>
        <div class="img-cta-container flex gap-4">
          {% assign displayed_color = "" %}
          {% for variant in product.variants %}
            {% assign variant_color = variant.option1 | downcase %}
            {% unless displayed_color contains variant_color %}
              {% assign displayed_color = displayed_color | append: variant_color | append: "," %}

              {% assign color_inventory = 0 %}
              {% for v in product.variants %}
                {% if v.option1 == variant.option1 %}
                  {% assign color_inventory = color_inventory | plus: v.inventory_quantity %}
                {% endif %}
              {% endfor %}

              <div
                class="color-thumbnail thumbnail w-14 h-14 border border-gray-400 cursor-pointer"
                data-color="{{ variant_color }}"
                data-inventory="{{ color_inventory }}"
                data-swiper-slide-index="0">
                <img
                  src="{{ variant.image | img_url: '100x100' }}"
                  alt="{{ variant.option1 }} thumbnail"
                  class="object-cover w-full h-full">
              </div>
            {% endunless %}
          {% endfor %}
        </div>

        <label class="warning block mb-1 font-semibold text-sm  text-transparent">This color is less then 20 available</label>

        <div class="mt-4 w-3/5">
          <label class="block mb-1 font-semibold text-sm">Select Size (Uk)</label>
          <div class="grid grid-cols-3 gap-4 size-options">
            {% assign all_sizes = "6.5,7,7.5,8,8.5,9,9.5,10,10.5,11,11.5,12" | split: "," %}
            {% for size in all_sizes %}
              <button
                type="button"
                class="size-button px-3 py-2 font-bold border border-gray-200 rounded hover:bg-gray-100 hover:border-gray-600 cursor-pointer transition duration-300 ease-in-out"
                data-size="{{ size }}">
                UK {{ size }}
              </button>
            {% endfor %}
          </div>
        </div>

        <div id="variant-images-preview" class="mb-6">
          {% assign target_variant = product.selected_or_first_available_variant %}
          {% assign extra_images = target_variant.metafields.custom.extra_images.value %}

        <!-- cta buttons -->
        <div class="mt-4 w-3/5">
          <div data-collection-name="{{ collection.title }}" class="hidden"></div>
          <button
            id="add-to-cart-button"
            type="button"
            class="w-full py-3 px-6 bg-black text-white font-bold opacity-50 cursor-not-allowed"
            disabled
            aria-disabled="true"
            aria-live="polite">Add To Cart</button>
        </div>

        <button
          id="wishlist-button"
          type="button"
          class="mt-3 w-3/5 py-3 px-6 border border-gray-300 text-gray-900 font-semibold hover:bg-gray-100 cursor-pointer flex items-center justify-center gap-2"
          data-product-id="{{ product.id }}"
          data-product-title="{{ product.title }}"
          data-product-price="{{ product.price }}"
          data-product-handle="{{ product.handle }}"
          data-product-image="{{ product.featured_image | img_url: 'medium' }}"
          aria-pressed="false">
          <span class="wishlist-text">Add to Wishlist</span>
          <svg
            class="w-5 h-5"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            xmlns="http://www.w3.org/2000/svg"
            aria-hidden="true">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1.8"
              d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.78 0-3.32.96-4.062 2.372C11.508 4.71 9.968 3.75 8.187 3.75 5.6 3.75 3.5 5.765 3.5 8.25c0 6.188 8.5 10 8.5 10s9-3.812 9-10z" />
          </svg>
        </button>
      </div>
    </div>
  </div>
  <!-- Overlay -->
  <div id="cart-overlay" class="fixed inset-0 bg-black/50 hidden z-40"></div>

  <!-- Toast Modal -->
  <div id="added-to-cart-modal" class="fixed top-6 right-6 bg-white rounded-lg shadow-lg w-80 p-4 hidden z-50">
    <!-- Close button -->
    <button id="close-modal" class="absolute top-2 right-2 cursor-pointer text-gray-500 hover:text-black text-xl">
      &times;
    </button>

    <!-- Modal content -->
    <div class="flex gap-4">
      <img
        id="modal-product-image"
        src=""
        alt=""
        class="w-20 h-20 object-cover rounded">
      <div>
        <p id="modal-product-title" class="font-semibold text-gray-900"></p>
        <p id="modal-product-collection" class="text-xs text-gray-500"></p>
        <p id="modal-product-price" class="text-sm text-gray-800 font-medium"></p>
        <p id="modal-product-size" class="text-sm text-gray-600"></p>
      </div>
    </div>

    <!-- View Cart button -->
    <div class="mt-4">
      <a href="/cart" class="block text-center bg-black text-white py-2 px-4 hover:bg-gray-800">
        View Cart
      </a>
    </div>
  </div>

  <div id="wishlist-overlay" class="fixed hidden inset-0 bg-black/50 z-40"></div>
  <div id="added-to-wishlist-modal" class="fixed hidden top-6 right-6 bg-white rounded-lg shadow-lg w-80 p-4 z-50">
    <button id="close-wishlist-modal" class="absolute top-2 right-2 cursor-pointer text-gray-500 hover:text-black text-xl">
      &times;
    </button>
    <!-- Modal content -->
    <div class="flex gap-4">
      <img
        id="modal-wishlist-product-image"
        src=""
        alt=""
        class="w-20 h-20 object-cover rounded">
      <div>
        <p id="modal-wishlist-product-title" class="font-semibold text-gray-900"></p>
        <p id="modal-wishlist-product-price" class="text-sm text-gray-800 font-medium"></p>
      </div>
    </div>
    <div class="mt-4">
      <a href="/wishlist" class="block text-center bg-black text-white py-2 px-4 hover:bg-gray-800">
        View Wishlist
      </a>
    </div>
  </div>
</section>


<script>
  window.variantInventory = {};
  {% for variant in product.variants %}
  var color = "{{ variant.option1 | downcase }}";
  var size = "{{ variant.option2 }}";
  var qty = {{ variant.inventory_quantity | default: 0 }};
  var id = {{ variant.id }};
  
  if (!window.variantInventory[color]) {
    window.variantInventory[color] = {};
  }
  
  window.variantInventory[color][size] = {
    qty: qty,
    id: id
  };
  {% endfor %}
  
  window.defaultImages = {};
  
  {% assign unique_colors = product.variants | map: 'option1' | uniq %}
  
  {% for color in unique_colors %}
    {% comment %} Find the first variant for this color (any size will do) {% endcomment %}
    {% assign color_variant = product.variants | where: 'option1', color | first %}
    
    {% if color_variant.metafields.custom.extra_images.value %}
      {% assign color_key = color | downcase | escape %}
      window.defaultImages["{{ color_key }}"] = [
        {% for media in color_variant.metafields.custom.extra_images.value %}
          "{{ media | image_url: width: 500 }}"{% unless forloop.last %},{% endunless %}
        {% endfor %}
      ];
    {% endif %}
  {% endfor %}
</script>